{
  "name": "clawchat",
  "version": "0.1.0",
  "private": true,
  "description": "ClawChat â€” Cross-platform AI secretary (Web, Desktop, Mobile)",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "dev:electron": "BUILD_TARGET=electron vite",
    "build": "tsc -p tsconfig.app.json --noEmit && vite build",
    "build:electron": "BUILD_TARGET=electron vite build",
    "build:capacitor": "vite build && npx cap sync",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "sync:android": "npx cap sync android",
    "sync:ios": "npx cap sync ios",
    "build:capacitor:android": "vite build && npx cap sync android",
    "build:capacitor:ios": "vite build && npx cap sync ios",
    "dist:android": "npm run build:capacitor:android && cd android && ./gradlew assembleDebug",
    "dist:android:prod": "npm run build:capacitor:android && cd android && ./gradlew assembleRelease",
    "install:android": "adb install -r android/app/build/outputs/apk/debug/app-debug.apk",
    "version:android": "node tools/bump-android-version.js",
    "cap:android": "npx cap open android",
    "cap:ios": "npx cap open ios",
    "package": "npm run build:electron && electron-builder"
  },
  "dependencies": {
